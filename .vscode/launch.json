    "version": "0.2.0",
    "configurations": [
        {
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "name": "Launch firefox",
            "url": "http://localhost:8081",
            "webRoot": "${workspaceFolder}",
            "pathMappings": [
                {
                    "url": "webpack://three-react-typescript/node_modules/jpeg-js",
                    "path": "${workspaceFolder}/node_modules/jpeg-js"
                }
            ]
        },
        {
            "name": "Launch Edge",
            "request": "launch",
            "type": "pwa-msedge",
            "url": "http://localhost:8081",
            "webRoot": "${workspaceFolder}"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:8081",
            "webRoot": "${workspaceFolder}"
        }
    ]
}